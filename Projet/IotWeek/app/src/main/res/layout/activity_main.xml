<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tlor.iotweek.MainActivity">
    <RelativeLayout
        android:id="@+id/groupNumbers"
        android:orientation="horizontal"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonByUser"
                android:textAlignment="center"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="Par utilisateur"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/buttonLastPassages"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="Derniers passages"
                android:layout_margin="10dp"
                app:layout_constraintRight_toRightOf="@+id/button" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupNumbers"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            app:srcCompat="@drawable/denis"
            android:baselineAlignBottom="true"
            android:textAlignment="center"
            />
    </RelativeLayout>

</RelativeLayout>
